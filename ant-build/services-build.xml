<project name="services" default="dist" xmlns:ivy="antlib:org.apache.ivy.ant" basedir="../services">
    <import file="utils-build.xml"/>
    <description>
        Ant build script
    </description>

    <property name="src" location="../services/src/main/java"/>
    <property name="build" location="services/target/classes"/>
    <property name="dist" location="services/target"/>
    <property name="lib.dir" location="target/lib"/>
    <property name="test.dir" location="../services/src/test"/>
    <property name="main-class" location="../services/src/main/java/com/builders/services/BuilderService.java"/>

    <property name="ivy.install.version" value="2.5.0"/>
    <property name="ivy.jar.dir" value="${basedir}/ivy"/>
    <property name="ivy.jar.file" value="${ivy.jar.dir}/ivy.jar"/>

    <target name="init">
        <tstamp/>
        <mkdir dir="${build}"/>
    </target>

    <target name="download-ivy" unless="skip.download">
        <mkdir dir="${ivy.jar.dir}"/>
        <echo message="installing ivy..."/>
        <get src="https://repo1.maven.org/maven2/org/apache/ivy/ivy/${ivy.install.version}/ivy-${ivy.install.version}.jar"
             dest="${ivy.jar.file}" usetimestamp="true"/>
    </target>

    <target name="install-ivy" depends="download-ivy" description="--> install ivy">
        <path id="ivy.lib.path">
            <pathelement location="${ivy.jar.file}"/>
        </path>
        <taskdef resource="org/apache/ivy/ant/antlib.xml"
                 uri="antlib:org.apache.ivy.ant" classpathref="ivy.lib.path"/>
    </target>

    <target name="compile" depends="init, install-ivy">
        <ivy:cachepath organisation="junit" module="junit" revision="4.11"
                       pathid="lib.path.id" inline="true"/>
        <javac srcdir="${src}" destdir="${build}" classpathref="lib.path.id" includeAntRuntime="false"/>

    </target>

    <target name="dist" depends="compile">
        <mkdir dir="${dist}/lib"/>
        <jar jarfile="${dist}/lib/builders-${DSTAMP}.jar" basedir="${build}"/>
    </target>

    <target name="run" depends="dist">
        <java jar="${dist}/lib/builders-${DSTAMP}.jar" fork="true"/>
    </target>

    <target name="clean">
        <delete dir="${build}"/>
        <delete dir="${dist}"/>
    </target>

    <target name="clean-build" depends="clean,dist"/>

</project>